<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davidlee1.whats_for_dinner.MainActivity">

    <TextView
        android:id="@+id/maintv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今晚吃什麼？"
        android:textColor="@android:color/holo_green_light"
        android:textSize="48sp"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/mainbt_favlist"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="138dp"
        android:layout_height="115dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="nextpage"
        android:text="我的最愛"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/mainbt_draw"
        app:layout_constraintTop_toTopOf="@+id/mainbt_draw" />

    <Button
        android:id="@+id/mainbt_restsearch"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="138dp"
        android:layout_height="115dp"
        android:background="@android:color/holo_purple"
        android:text="搜尋餐廳"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/mainbt_draw"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/mainbt_draw" />

    <Button
        android:id="@+id/mainbt_nearbyrest"
        android:layout_width="138dp"
        android:layout_height="115dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/holo_green_light"
        android:text="附近餐廳"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/mainbt_restsearch"
        app:layout_constraintTop_toTopOf="@+id/mainbt_restsearch" />

    <Button
        android:id="@+id/mainbt_draw"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="291dp"
        android:layout_height="128dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:text="抽餐廳"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/maintv_title"
        app:layout_constraintTop_toBottomOf="@+id/maintv_title" />

    <Button
        android:id="@+id/mainbt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="LOGIN"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/mainbt_nearbyrest"
        app:layout_constraintTop_toBottomOf="@+id/mainbt_nearbyrest" />


</android.support.constraint.ConstraintLayout>
