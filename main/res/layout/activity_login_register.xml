<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davidlee1.whats_for_dinner.login_register">

    <TextView
        android:id="@+id/lgrtv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create accountï¼š"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/lgret_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please enter your ID"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lgrtv_account"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/lgrtv_account" />

    <TextView
        android:id="@+id/lgrtv_Password"
        android:layout_width="71dp"
        android:layout_height="19dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="39dp"
        android:text="Password:"
        app:layout_constraintLeft_toLeftOf="@+id/lgrtv_account"
        app:layout_constraintTop_toBottomOf="@+id/lgret_ID" />

    <EditText
        android:id="@+id/lgret_password"
        android:layout_width="239dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please enter your password"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@+id/lgrtv_account"
        app:layout_constraintTop_toBottomOf="@+id/lgret_password" />

    <EditText
        android:id="@+id/lgret_passwordcheck"
        android:layout_width="239dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="203dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please enter your password again"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/lgrtv_account"
        app:layout_constraintTop_toBottomOf="@+id/lgret_password" />

    <Button
        android:id="@+id/lgrbt_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="150dp"
        android:text="create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>

