<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davidlee1.whats_for_dinner.restaurant_draw"
    android:background="#FF00AFFF">

    <TextView
        android:id="@+id/drawtv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天就吃"
        android:textColor="#FFFF0000"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/drawtv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="吧！"
        android:textColor="#FFFF0000"
        android:textSize="60sp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/drawtv_restname"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/drawtv_restname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="40dp"
        android:text=" "
        android:textColor="#FFFFFFFF"
        android:textSize="45sp"
        app:layout_constraintLeft_toLeftOf="@+id/drawtv_title1"
        app:layout_constraintTop_toBottomOf="@+id/drawtv_title1" />

    <Button
        android:id="@+id/drawbt_redraw"
        android:layout_width="149dp"
        android:layout_height="65dp"
        android:background="@android:drawable/checkbox_off_background"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="再抽一次！"
        android:textColor="#FF000000"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="115dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
