<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davidlee1.whats_for_dinner.login"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/logintv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your user ID:"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/loginet_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="account ID"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/logintv_id"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/logintv_id" />

    <TextView
        android:id="@+id/logintv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your password:"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/loginet_id"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/logintv_id" />

    <EditText
        android:id="@+id/loginet_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="password"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/logintv_password"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/logintv_password" />

    <Button
        android:id="@+id/loginbt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/loginet_password"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/loginet_password" />

    <Button
        android:id="@+id/loginbt_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIT"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/loginet_password"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/loginet_password" />

    <Button
        android:id="@+id/loginbt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/loginbt_quit"
        app:layout_constraintLeft_toRightOf="@+id/loginbt_quit"
        android:layout_marginLeft="0dp" />
</android.support.constraint.ConstraintLayout>
